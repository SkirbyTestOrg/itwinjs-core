{
  "name": "integration-tests",
  "version": "0.0.0",
  "description": "ECPresentation integration tests",
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "private": true,
  "scripts": {
    "build": "",
    "cover": "nyc npm test -- --coverage",
    "lint": "tslint ./",
    "test": "node ../../scripts/run-tests.js --testsDir ./",
    "test+cover": "nyc npm test -- --coverage --report",
    "validatePackageJson": "validjson ./package.json",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "^8",
    "@bentley/ecpresentation-backend": "^0.1.2",
    "@bentley/ecpresentation-common": "^0.1.2",
    "@bentley/ecpresentation-controls": "^0.1.3",
    "@bentley/ecpresentation-frontend": "^0.1.2",
    "@bentley/imodeljs-common": "^0.80",
    "@bentley/imodeljs-backend": "^0.80",
    "@bentley/imodeljs-frontend": "^0.80",
    "@bentley/imodeljs-e_1_6_11-win32-x64": "^17",
    "@bentley/imodeljs-n_8-win32-x64": "^17",
    "gl": "^4"
  },
  "devDependencies": {
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.0",
    "typescript": "^2.8.3",
    "valid-json-cli": "^1.3.0"
  },
  "nyc": {
    "nycrc-path": "../../.nycrc",
    "report-dir": "../out/reports/coverage/integration",
    "temp-directory": "../out/reports/coverage/integration/.nyc_output",
    "cwd": "../",
    "include": [
      "common/lib/**/*.js",
      "backend/lib/**/*.js",
      "frontend/lib/**/*.js",
      "controls/lib/**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "all": false
  }
