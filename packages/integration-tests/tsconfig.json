{
  "extends": "../../node_modules/@bentley/bentleyjs-tools/tsconfig-base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./node_modules",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@helpers/*": ["../../test-helpers/*"],
      "@common/*": ["@bentley/ecpresentation-common/lib/*"],
      "*": ["../../node_modules/*", "*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
