{
  "extends": "./node_modules/@bentley/bentleyjs-tools/tsconfig-base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./node_modules",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": ["@bentley/ecpresentation-common/lib/*"],
      "@helpers/*": ["../../common/tests/_helpers/*", "../../frontend/tests/_helpers/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
