{
  "name": "imodeljs-core-testbed",
  "//private": "NOTE: this is a private package that is never published",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && tsc",
    "build:frontend": "cd frontend && tsc",
    "postbuild": "concurrently \"npm run resolve-imports-backend\" \"npm run resolve-imports-frontend\"",
    "clean": "rimraf backend/lib && rimraf frontend/lib",
    "start": "floss --debug --path frontend/lib/frontend/index.js",
    "test": "floss --path frontend/lib/frontend/index.js",
    "resolve-imports-backend": "cd backend/lib && replace \"@build/imodeljs-core\" \"../../../../backend\" -r -q .",
    "resolve-imports-frontend": "cd frontend/lib && replace \"@build/imodeljs-core\" \"../../../../frontend\" -r -q ."
  },
  "repository": {},
  "dependencies": {
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "electron": "1.6.11",
    "express": "^4.16.2",
    "floss": "^2.1.3",
    "fs-extra": "^4.0.3",
    "node-replace": "^0.3.3",
    "webpack": "^3.10.0"
  },
  "//optionalDependencies": "imodeljs-e_1_6_11-win32-x64 is optional because it is not available for all platforms where we install, build, and test imodeljs-core",
  "optionalDependencies": {
    "@bentley/imodeljs-e_1_6_11-win32-x64": "~1.4.0",
    "@bentley/imodeljs-nodeaddonapi": "~1.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.0.39",
    "@types/webpack": "^3.8.1"
  }
}
