{
  "extends": "./node_modules/@bentley/bentleyjs-tools/tsconfig-base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": "./node_modules",
    "paths": {
      "$(iModelJs-Common)/*": ["@bentley/imodeljs-backend/*"], /* Get intellisense to work in src/common */
      "*": [
        "@types/*",
        "*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}